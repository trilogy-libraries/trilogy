# MariaDB 12.1 configuration file
# Mounted into the container at /etc/mysql/conf.d

[mysqld]

sql_mode = NO_ENGINE_SUBSTITUTION

server_id = 1

# MariaDB 11.4+ disabled performance_schema by default
# Tests need it for SSL status queries
performance_schema = ON

# Note: SSL certificates are auto-generated by MariaDB.
# We don't specify custom paths here because the certs are generated
# after config is read, causing startup failures.
